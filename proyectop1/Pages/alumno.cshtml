@page
@model AlumnosModel
@{
    ViewData["Title"] = "Lista de Alumnos";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alumnos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center">Lista de Alumnos</h2>
        <table id="alumnosTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Apellido</th>
                    <th>Nombre</th>
                    <th>Parcial 1</th>
                    <th>Parcial 2</th>
                    <th>Parcial 3</th>
                    <th>Extraordinario</th>
                    <th>Promedio</th>
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in Model.Alumnos.Rows)
                {
                    <tr>
                        <td>@row["id"]</td>
                        <td>@row["apellido"]</td>
                        <td>@row["nombre"]</td>
                        <td>@row["parcial1"]</td>
                        <td>@row["parcial2"]</td>
                        <td>@row["parcial3"]</td>
                        <td>@row["ext"]</td>
                        <td>@row["promedio"]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Sección del gráfico -->
    <div class="container mt-5">
        <h2 class="text-center">Gráfica de Promedios</h2>
        <canvas id="grafica"></canvas>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/graficas.js"></script>

    <script>
        $(document).ready(function() {
            $('#alumnosTable').DataTable();
        });
    </script>
</body>
</html>